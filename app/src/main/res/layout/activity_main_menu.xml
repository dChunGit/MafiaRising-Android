<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="@drawable/mm_bkgd"
    tools:context=".MainMenu"
    android:id="@+id/mm_root_layout">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="9">

        <RelativeLayout
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="-5dp"
            android:layout_weight="4.5">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/mm_logo"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/btn1"
                android:onClick="startGame"
                android:paddingStart="-2dp"
                android:layout_marginEnd="70dp"
                android:background="@drawable/mm_btn_bkgd"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.illum.MafiaRising.CustomFontTextView
                android:id="@+id/btn1_text"
                android:text="@string/mm_btn1"
                android:textSize="40sp"
                app:font="@string/font_name_kefa"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignEnd="@+id/btn1"
                android:layout_marginEnd="70dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/btn2"
                android:onClick="continueGame"
                android:paddingStart="-2dp"
                android:layout_marginEnd="70dp"
                android:background="@drawable/mm_btn_bkgd"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.illum.MafiaRising.CustomFontTextView
