<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:background="@drawable/bkgd_grungewithswoosh"
    tools:context=".SetupPlayerCount">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header">

        <RelativeLayout
            android:id="@+id/header_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_content_height">

            <include layout="@layout/reusable_pause_btn"
                android:id="@+id/include" />

            <com.illum.MafiaRising.CustomFontTextView
                android:id="@+id/title"
                android:text="@string/setup_player_count_title"
                android:textSize="50sp"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:font="@string/font_name_kefa"
                android:layout_centerInParent="true"/>

            <include layout="@layout/reusable_next_btn"/>

        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="250dp"
            android:layout_height="@dimen/divider_height"
            android:background="@drawable/divider"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/header_content"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4">

            <com.illum.MafiaRising.CustomFontTextView
                android:id="@+id/text_numPlayersPicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of Players"
                app:font="Kefa"
                android:textSize="40sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6">

            <NumberPicker
                android:id="@+id/numPlayersPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:background="@color/white"/>

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/help_button"
        android:onClick="activitySetupPlayersInfo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_info"/>

</RelativeLayout>