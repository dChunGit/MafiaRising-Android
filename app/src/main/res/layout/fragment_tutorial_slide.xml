<?xml version="1.0" encoding="utf-8"?>
<com.illum.MafiaRising.BidirectionalViewPage xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:id="@+id/tutorial_page"
    app:pageSwipeDirection="@string/swipe_direction_vertical"
    tools:context=".RulesTutorial">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:id="@+id/header"
        android:layout_weight=".2">
        <TextView
            android:id="@+id/title"
            android:text="Hello"
            android:textSize="60sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:layout_centerVertical="true"/>
        <!--<com.illum.MafiaRising.CustomFontTextView
            android:id="@+id/title"
